<div class="row">
	<div class="col-lg-3">
		<h1 class="my-4">Shop Name</h1>
		<div class="list-group">
			<% Category.all.find_each do |category| %>  
				<%= link_to category.title, products_path(category: category.id), class: "list-group-item" %>
			<% end %>
		</div>
	</div>
      
	<div class="col-lg-9">
		<div>
			<img class="img-fluid" src="http://placehold.it/900x350" alt="Responsive image">
		</div>
		<br/>
		<div class="row">
			<% @products.each do |p| %>
				<div class="col-lg-4 col-md-6 mb-4">
				    <div class="card h-100 text-center">
				        <a href="#"><img class="card-img-top" src="<%= p.image %>"></a>
				        <div class="card-body">
				            <h4 class="card-title">
				            	<a href="#"><%= p.title %></a>
				            </h4>
				            <h5><%= p.price %> руб</h5>
				            <p class="card-text"><%= p.description %></p>
				       	</div>
				        <div class="card-footer">
				            <button class="btn btn-outline-success" onclick="add_to_cart(<%= p.id %>)">В корзину</button>
				        </div>
				    </div>
				</div>
			<% end %>
		</div>
	</div>
</div>