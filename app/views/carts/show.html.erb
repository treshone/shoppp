<div class="row">
	<div class="col-lg-3">
		<h1 class="my-4">Shop Name</h1>
	</div>
      
	<div class="col-lg-9">
		<div>
			<h1 class="my-4">Корзина</h1>
		</div>
		<% if @items.length == 0 %>
			<div>
				<p>Сейчас ваша корзина пуста.</p>
				<%= link_to 'Вернуться к списку товаров', root_path, class: 'btn btn-outline-info' %>
			</div>
			<br/>
			<br/>
		<% else %>
			<div id="cart">
				<div>
					<table class="table"> 
						<thead class="thead-light"> 
							<tr>
							    <th>Товар</th>
							    <th>Количество</th> 
							    <th>Стоимость</th> 
							</tr> 
						</thead> 
					    <tbody> 
					      	<% total_price = 0 %>
						    <% total_qty = 0 %>	
						    <% @items.each do |item| %>	
							  	<tr> 
							    	<td><%= item[0].title %></td>  
								  	<td><%= item[1] %></td>
								  	<td><%= item[0].price %> руб.</td> 
							  	</tr>
							    <% total_price += item[0].price * item[1].to_i %>
						      	<% total_qty += item[1].to_i %> 
						    <% end %>
				        	<tr>
							    <td>Итого:</td>
							    <td><%= total_qty %></td>
							    <td><%= total_price %> руб.</td>
							</tr>
				      	</tbody>
				    </table>
				</div>
				<div>
					<%= link_to 'Вернуться к списку товаров', root_path, class: 'btn btn-outline-info' %>
					<button class="btn btn-outline-danger" onclick="return cancel_order();">Очистить корзину</button>
				</div>
			</div>
			<br/>
			<br/>
		<% end %>	
	</div>
</div>